@model Hockeyshop.Data.Data.Marketing.Promotion

<dt class="col-sm-4">Name</dt>
<dd class="col-sm-8">@Model.Name</dd>
<dt class="col-sm-4">Discount Type</dt>
<dd class="col-sm-8">@Model.DiscountType?.DiscountTypeName</dd>
<dt class="col-sm-4">Discount Value</dt>
<dd class="col-sm-8">@Model.DiscountValue</dd>
<dt class="col-sm-4">Start Date</dt>
<dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>
<dt class="col-sm-4">End Date</dt>
<dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>
<dt class="col-sm-4">Active</dt>
<dd class="col-sm-8">
    <input type="checkbox" disabled @(Model.Active ? "checked" : "") />
</dd>