@model Hockeyshop.Data.Data.Products.Product

@{
    var firstImage = Model.ProductImages?.FirstOrDefault();
    var imageUrl = firstImage != null
        ? $"http://localhost:5000/content/img_products/{firstImage.ImageUrl}"
        : "https://via.placeholder.com/200x200?text=No+Image";
}
<dt class="col-sm-4">Image</dt>
<dd class="col-sm-8">
    <img src="@imageUrl" alt="Product image" style="max-width:200px;max-height:200px;" />
</dd>


<dt class="col-sm-4">Product</dt>
<dd class="col-sm-8">@Model.Name</dd>
<dt class="col-sm-4">Product Category</dt>
<dd class="col-sm-8">@Model.ProductCategory?.Name</dd>
<dt class="col-sm-4">Unit Price</dt>
<dd class="col-sm-8">@Model.Price.ToString("C")</dd>
<dt class="col-sm-4">Supplier</dt>
<dd class="col-sm-8">@Model.Supplier?.Name</dd>
<dt class="col-sm-4">Is Highlight?</dt>
<dd class="col-sm-8">
    <input type="checkbox" disabled @(Model.Highlight ? "checked" : "") />
</dd>
<dt class="col-sm-4">Is new arrival?</dt>
<dd class="col-sm-8">
    <input type="checkbox" disabled @(Model.NewArrival ? "checked" : "") />
</dd>
<dt class="col-sm-4">Description</dt>
<dd class="col-sm-8">@Model.Description</dd>