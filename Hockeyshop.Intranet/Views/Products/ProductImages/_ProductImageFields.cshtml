@model Hockeyshop.Intranet.Models.ViewModels.ProductImageUploadViewModel

@if (ViewData["FormAction"]?.ToString() == "Edit")
{
    <input type="hidden" asp-for="IdProductImage" />
}

<div class="form-group">
    <label asp-for="IdProduct" class="control-label"></label>
    <select asp-for="IdProduct" class="form-control" asp-items="ViewBag.IdProduct">
        <option value="">-- Select --</option>
    </select>
</div>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <div class="form-group">
        <label>Current Image</label><br />
        <img src="http://localhost:7174/content/img_products/@Model.ImageUrl" style="max-width:200px;max-height:200px;" />
    </div>
}

<div class="form-group">
    <label asp-for="ImageFile" class="control-label">Upload New Image</label>
    <input asp-for="ImageFile" class="form-control" accept="image/*" />
    <span asp-validation-for="ImageFile" class="text-danger"></span>
</div>
