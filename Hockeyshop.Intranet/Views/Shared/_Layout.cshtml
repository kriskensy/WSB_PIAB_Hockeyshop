<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hockeyshop.Intranet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hockeyshop.Intranet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-md fixed-top navbar-dark admin-navbar">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-user-shield me-2"></i>Besthockey Employee Dashboard</a>

                <ul class="nav nav-pills me-auto">
                    <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-house me-1"></i>Homepage</a>
                    <li class="nav-item dropdown">
                        <button class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-warehouse me-1"></i>Warehouse</button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Warehouse" asp-action="Stock">Stock</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Warehouse" asp-action="Suppliers">Suppliers</a></li>
                        </ul>
                    </li>
                    <a class="btn btn-success" asp-area="" asp-controller="Orders" asp-action="Index"><i class="fas fa-box-open me-1"></i>Orders</a>
                    <a class="btn btn-success" asp-area="" asp-controller="Reports" asp-action="Sales"><i class="fas fa-chart-line me-1"></i>Reports</a>
                </ul>

                <div class="btn-group ms-auto">
                    <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-user-cog me-1"></i>@User.Identity.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-area="" asp-controller="Auth" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Layout container *@
    <div class="container align-content-center">
        <div class="row g-4 text-center">

        @* Quick Access Cards *@
            <div class="col-md-4">
                <div class="card bg-success text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Orders" asp-action="Index"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-box-open me-2"></i>Orders</h5>
                        <p>View and manage orders.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Inventory" asp-action="Stock"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-boxes me-2"></i>Stock</h5>
                        <p>Check the availability of products in stock.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Inventory" asp-action="Suppliers"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-truck me-2"></i>Suppliers</h5>
                        <p>View and manage suppliers.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-primary text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Reports" asp-action="Sales"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-chart-line me-2"></i>Reports</h5>
                        <p>Generate sales reports and analyze data.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-danger text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Admin" asp-action="Users"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-users-cog me-2"></i>User management</h5>
                        <p>Manage employee accounts and permissions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-secondary text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Support" asp-action="Tickets"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-tools me-2"></i>Service Requests</h5>
                        <p>Review and handle service requests.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-secondary text-white h-100 position-relative border">
                    <a class="stretched-link" asp-controller="Calendar" asp-action="Index"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-calendar-alt me-2"></i>Calendar</h5>
                        <p>Keep track of upcoming meetings and events.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Documents" asp-action="Index"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-file-alt me-2"></i>Documentation</h5>
                        <p>Find policies, procedures, and other documents.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white h-100 position-relative">
                    <a class="stretched-link" asp-controller="Help" asp-action="FAQ"></a>
                    <div class="card-body">
                        <h5><i class="fas fa-question-circle me-2"></i>FAQ for employees</h5>
                        <p>Find answers to the most frequently asked questions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="page-footer mt-auto py-3">
        <div class="container">
            <div class="row w-100">
                <div class="col-12 col-md-4">
                    <p>Copyright &copy; 2025 Kris</p>
                </div>
                <div class="col-12 col-md-6">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">About</a></li>
                        <li class="list-inline-item"><a href="#">Privacy policy</a></li>
                        <li class="list-inline-item"><a href="#">Returns</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
