<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hockeyshop.Intranet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hockeyshop.Intranet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-md fixed-top navbar-dark admin-navbar">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-user-shield me-2"></i>Besthockey Employee Dashboard</a>

                <ul class="nav nav-pills me-auto">
                    <a class="btn btn-success" asp-area="" asp-controller="HockeyNewsController" asp-action="Index"><i class="fas fa-newspaper me-1"></i>Hockeynews</a>
                    <a class="btn btn-success" asp-area="" asp-controller="ProductsController" asp-action="Index"><i class="fas fa-shop me-1"></i>Products</a>
                    <a class="btn btn-success" asp-area="" asp-controller="OrdersController" asp-action="Index"><i class="fas fa-chart-line me-1"></i>Orders</a>
                    <a class="btn btn-success" asp-area="" asp-controller="UserCartsController" asp-action="Index"><i class="fas fa-cart-shopping me-1"></i>Cart</a>
                    <a class="btn btn-success" asp-area="" asp-controller="PaymentMethodsController" asp-action="Index"><i class="fas fa-credit-card me-1"></i>Payments</a>
                    <a class="btn btn-success" asp-area="" asp-controller="UsersController" asp-action="Index"><i class="fas fa-user me-1"></i>Profile</a>
                </ul>

                <div class="btn-group ms-auto">
                    <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-user-cog me-1"></i>@User.Identity.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-area="" asp-controller="Auth" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mt-5 pt-3">
        <div class="row">

            <nav id="sidebar" class="bg-light border-end vh-100 position-fixed">
                <div class="sidebar-header p-3">
                    <h4>Menu</h4>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-2"></i>Homepage
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HockeyNews" asp-action="Index">
                            <i class="fas fa-newspaper me-2"></i>Hockey news
                        </a>
                    </li>
                    <!-- orders -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-toggle="collapse" href="#ordersSubmenu" role="button" aria-expanded="false" aria-controls="ordersSubmenu">
                            <i class="fas fa-box-open me-2"></i>Orders
                        </a>
                        <div class="collapse" id="ordersSubmenu">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Orders" asp-action="Index">Orders</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="OrderItems" asp-action="Index">Order items</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Invoices" asp-action="Index">Invoices</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="OrderStatus" asp-action="Index">Order status</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <!-- products -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-toggle="collapse" href="#productsSubmenu" role="button" aria-expanded="false" aria-controls="productsSubmenu">
                            <i class="fas fa-shop me-2"></i>Products
                        </a>
                        <div class="collapse" id="productsSubmenu">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Products" asp-action="Index">Product list</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ProductCategories" asp-action="Index">Product categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ProductImages" asp-action="Index">Product images</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Suppliers" asp-action="Index">Suppliers</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <!-- marketing -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-toggle="collapse" href="#marketingSubmenu" role="button" aria-expanded="false" aria-controls="marketingSubmenu">
                            <i class="fas fa-bullhorn me-2"></i>Marketing
                        </a>
                        <div class="collapse" id="marketingSubmenu">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Promotions" asp-action="Index">Promotions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ProductPromotions" asp-action="Index">Product promotions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="DiscountTypes" asp-action="Index">Discount types</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <!-- stock -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Stocks" asp-action="Index">
                            <i class="fas fa-warehouse me-2"></i>Stock
                        </a>
                    </li>
                    <!-- payments -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-toggle="collapse" href="#paymentsSubmenu" role="button" aria-expanded="false" aria-controls="paymentsSubmenu">
                            <i class="fas fa-credit-card me-2"></i>Payments
                        </a>
                        <div class="collapse" id="paymentsSubmenu">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Payments" asp-action="Index">Payments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="PaymentMethods" asp-action="Index">Payment methods</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="PaymentStatus" asp-action="Index">Payment status</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <!-- users -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-toggle="collapse" href="#usersSubmenu" role="button" aria-expanded="false" aria-controls="usersSubmenu">
                            <i class="fas fa-users me-2"></i>Users
                        </a>
                        <div class="collapse" id="usersSubmenu">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="Index">Users list</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="UserRoles" asp-action="Index">User roles</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <!-- carts -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-toggle="collapse" href="#cartSubmenu" role="button" aria-expanded="false" aria-controls="cartSubmenu">
                            <i class="fas fa-cart-shopping me-2"></i>Carts
                        </a>
                        <div class="collapse" id="cartSubmenu">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="UserCarts" asp-action="Index">User carts</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="CartItems" asp-action="Index">Cart items</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </nav>

             <div class="content" style="margin-left: 280px;"> 
                 @RenderBody() 
             </div> 


            @* <div class="col-md-9"> *@
            @*     <main role="main" class="pb-3"> *@
            @*         @RenderBody() *@
            @*     </main> *@
            @* </div> *@
        </div>
    </div>

    <footer class="page-footer mt-auto py-3">
        <div class="container">
            <div class="row w-100">
                <div class="col-12 col-md-4">
                    <p>Copyright &copy; 2025 Kris</p>
                </div>
                <div class="col-12 col-md-6">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">About</a></li>
                        <li class="list-inline-item"><a href="#">Privacy policy</a></li>
                        <li class="list-inline-item"><a href="#">Returns</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
