@model Hockeyshop.Data.Data.Inventory.Stock

@if (ViewData["FormAction"]?.ToString() == "Edit")
{
    <input type="hidden" asp-for="IdStock" />
}

<div class="form-group">
    <label asp-for="IdProduct" class="control-label"></label>
    <select asp-for="IdProduct" class="form-control" asp-items="ViewBag.IdProduct"></select>
</div>
<div class="form-group">
    <label asp-for="Quantity" class="control-label"></label>
    <input asp-for="Quantity" class="form-control" />
    <span asp-validation-for="Quantity" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UpdatedAt" class="control-label"></label>
    <input asp-for="UpdatedAt" class="form-control" />
    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
</div>