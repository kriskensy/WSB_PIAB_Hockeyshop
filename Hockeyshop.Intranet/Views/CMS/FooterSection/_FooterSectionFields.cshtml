@model Hockeyshop.Data.Data.CMS.FooterSection

@if (ViewData["FormAction"]?.ToString() == "Edit" || ViewData["FormAction"]?.ToString() == "Delete")
{
    <input type="hidden" asp-for="Id" />
}

<div class="form-group">
    <label asp-for="FooterText" class="control-label"></label>
    <textarea asp-for="FooterText" class="form-control" rows="3"></textarea>
    <span asp-validation-for="FooterText" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="FooterLogoText" class="control-label"></label>
    <input asp-for="FooterLogoText" class="form-control" />
    <span asp-validation-for="FooterLogoText" class="text-danger"></span>
</div>
<div class="form-group">
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Active</label>
    </div>
    <span asp-validation-for="IsActive" class="text-danger"></span>
    <small class="form-text text-muted">Only one footer section can be active at a time.</small>
</div>
