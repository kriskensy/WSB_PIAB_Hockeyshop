@model Hockeyshop.Data.Data.Orders.Invoice

<dt class="col-sm-4">User</dt>
<dd class="col-sm-8">@(Model.User != null ? Model.User.FirstName + " " + Model.User.LastName : "no data")</dd>
<dt class="col-sm-4">Invoice Number</dt>
<dd class="col-sm-8">@Model.InvoiceNumber</dd>
<dt class="col-sm-4">Order</dt>
<dd class="col-sm-8">@Model.IdOrder</dd>
<dt class="col-sm-4">Issue Date</dt>
<dd class="col-sm-8">@Model.IssueDate.ToShortDateString()</dd>
<dt class="col-sm-4">Total Amount</dt>
<dd class="col-sm-8">@Model.Order?.TotalAmount</dd>

<!--wyświetlanie zamówionych pozycji na karcie faktury-->
@if (Model.Order?.OrderItems != null && Model.Order.OrderItems.Any())
{
    <h4 class="mt-4">Order Items</h4>
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Product</th>
                <th class="text-center">Quantity</th>
                <th class="text-end">Unit price</th>
                <th class="text-end">Total</th>
            </tr>
        </thead>
        <tbody>
            @{
                int idx = 1;
                foreach (var item in Model.Order.OrderItems)
                {
                    <tr>
                        <td>@idx</td>
                        <td>@item.Product?.Name</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                        <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                    </tr>
                    idx++;
                }
            }
        </tbody>
    </table>
}
