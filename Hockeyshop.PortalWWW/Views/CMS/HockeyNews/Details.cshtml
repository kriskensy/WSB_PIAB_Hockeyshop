@model Hockeyshop.Data.Data.CMS.HockeyNews

@{
    ViewData["Title"] = Model.Title;
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-lg">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="object-fit:cover; max-height:320px;">
                }
                <div class="card-body">
                    <h2 class="card-title mb-3">@Model.Title</h2>
                    <div class="mb-3 text-muted small">
                        <i class="fa-regular fa-user"></i>
                        @Model.Author?.FirstName @Model.Author?.LastName
                        &nbsp;|&nbsp;
                        <i class="fa-regular fa-calendar"></i>
                        @Model.CreatedAt.ToString("yyyy-MM-dd")
                    </div>
                    <p class="card-text fs-5">
                        @Model.Content
                    </p>
                    <a asp-action="Index" class="btn btn-outline-success mt-3">
                        <i class="fa-solid fa-arrow-left"></i> Back to hockeynews
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
