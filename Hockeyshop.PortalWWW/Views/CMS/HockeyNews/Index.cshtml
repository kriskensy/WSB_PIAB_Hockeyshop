@model IEnumerable<Hockeyshop.Data.Data.CMS.HockeyNews>

@{
    ViewData["Title"] = "Hockeynews";
    var newsList = Model.ToList();
}

<section class="container my-5">
    <h2 class="mb-4">Hockey news</h2>
    <div id="newsCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < newsList.Count; i++)
            {
                var item = newsList[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-8 col-lg-6">
                            <a asp-action="Details" asp-route-id="@item.IdHockeyNews" class="text-decoration-none text-dark d-block h-100">
                                <div class="card hockey-news-card h-100 shadow-sm" style="border-radius: var(--radius-lg); overflow: hidden;">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                                             style="object-fit:cover; height:220px; border-top-left-radius: var(--radius-lg); border-top-right-radius: var(--radius-lg);" />
                                    }
                                <div class="card-body d-flex flex-column" style="padding: var(--spacing-md);">
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="card-text">
                                        @(item.Content != null && item.Content.Length > 120
                                                                                ? item.Content.Substring(0, 120) + "..."
                                                                                : item.Content)
                                    </p>
                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            @item.Author?.FirstName @item.Author?.LastName | @item.CreatedAt.ToString("yyyy-MM-dd")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
                        }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#newsCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
