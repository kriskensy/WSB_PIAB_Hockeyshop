@model IEnumerable<Hockeyshop.Data.Data.Products.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<div class="container my-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        @foreach (var product in Model)
        {
            var firstImage = product.ProductImages?.FirstOrDefault();
            <div class="col">
                <div class="card h-100">
                    @if (firstImage != null && !string.IsNullOrEmpty(firstImage.ImageUrl))
                    {
                        <img src="@Url.Content("~/content/" + firstImage.ImageUrl)" class="card-img-top" alt="@product.Name" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/content/grays hoodie.webp")" class="card-img-top" alt="No image" />
                    }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">
                        @(product.Description?.Length > 60
                                                ? product.Description.Substring(0, 60) + "..."
                                                : product.Description)
                    </p>
                    <div class="mt-auto">
                        <span class="fw-bold">@product.Price.ToString("C")</span>
                    </div>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.IdProduct" class="btn btn-outline-success mt-2">I want it!</a>
                </div>
            </div>
        </div>
                }
    </div>
</div>