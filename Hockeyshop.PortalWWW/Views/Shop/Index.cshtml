@model IEnumerable<Hockeyshop.Data.Data.Products.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card highlights-card w-100 h-100 shadow" style="max-width: 2000px; min-width: 340px; border-radius: var(--radius-lg);">
        <div class="card-body d-flex flex-column justify-content-center align-items-center p-4" style="min-height: 0; flex: 0 0 auto;">
            <h1 class="card-title mb-2 fs-2">Welcome to Besthockey Shop</h1>
            <p class="card-text text-center mb-0 fs-5 lh-base">
                "Everything You Need to Play Hard, Train Smart, and Win Big<br>
                – Premium Field Hockey Gear for Champions at Every Level."
            </p>
        </div>
        <img src="~/content/Logo_BestHockey.png" alt="Besthockey Logo"
             class="card-img-bottom"
             style="width: 100%; object-fit: contain; background: var(--color-white);" />
    </div>
</div>


