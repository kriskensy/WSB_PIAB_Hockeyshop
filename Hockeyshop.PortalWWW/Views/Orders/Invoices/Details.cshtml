@model Hockeyshop.Data.Data.Orders.Invoice

@{
    ViewData["Title"] = "Invoice details";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<h1 class="mb-4">Invoice <span class="fw-semibold">@Model.InvoiceNumber</span></h1>

<div class="container-fluid shop-section">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm" style="border-radius: var(--radius-md);">
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Invoice number</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.InvoiceNumber</dd>

                        <dt class="col-sm-4">Issue date</dt>
                        <dd class="col-sm-8">@Model.IssueDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Order number</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary" style="border-radius: var(--radius-sm);">
                                @Model.Order?.IdOrder
                            </span>
                        </dd>

                        <dt class="col-sm-4">Order total</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Order?.TotalAmount.ToString("C")</dd>
                    </dl>

                    <table class="table table-bordered table-hover shop-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-end">Unit price</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Order.OrderItems)
                            {
                                <tr>
                                    <td>@item.Product?.Name</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                    <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-transparent border-0 text-end">
                    <a asp-action="Index" class="btn btn-outline-success">
                        <i class="fa fa-arrow-left"></i> Back to invoices
                    </a>
                    <a asp-action="DownloadPdf" asp-route-id="@Model.IdInvoice" class="btn btn-primary ms-2">
                        <i class="fa fa-file-pdf"></i> Download PDF
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
