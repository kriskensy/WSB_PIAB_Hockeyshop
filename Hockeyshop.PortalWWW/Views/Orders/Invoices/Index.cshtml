@model IEnumerable<Hockeyshop.Data.Data.Orders.Invoice>

@{
    ViewData["Title"] = "My Invoices";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<h1 class="mb-4">My Invoices</h1>

@if (!Model.Any())
{
    <div class="alert alert-info text-center my-5" role="alert">
        <i class="fa-solid fa-file-invoice fa-2x mb-3"></i><br />
        You have no invoices yet.
    </div>
}
else
{
    <div class="container-fluid shop-section">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm" style="border-radius: var(--radius-md);">
                    <div class="card-body p-4">
                        <table class="table table-bordered table-hover shop-table align-middle">
                            <thead>
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>Date</th>
                                    <th>Order</th>
                                    <th>Total</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-semibold">@invoice.InvoiceNumber</span>
                                        </td>
                                        <td>@invoice.IssueDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <span class="badge bg-secondary" style="border-radius: var(--radius-sm);">
                                                @invoice.IdOrder
                                            </span>
                                        </td>
                                        <td>
                                            <span class="fw-bold">@invoice.TotalAmount.ToString("C")</span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@invoice.IdInvoice" class="btn btn-outline-success btn-sm">
                                                <i class="fa fa-eye"></i> Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
