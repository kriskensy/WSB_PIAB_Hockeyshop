<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Besthockey</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hockeyshop.PortalWWW.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>
<body>
    <div class="page-wrapper d-flex flex-column min-vh-100">
    <header>
        <div class="container mt-5 pt-3">
            @await Html.PartialAsync("Links")
        </div>
    </header>

    <div class="main-content d-flex flex-grow-1" style="min-height: 0;">
        @{
            var categories = ViewBag.ProductCategories as IEnumerable<Hockeyshop.Data.Data.Products.ProductCategory>;
        }
        @await Html.PartialAsync("_ProductCategoriesSidebar", categories)

        <div class="main-area flex-grow-1 p-3" style="min-height: 0;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="page-footer py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span class="footer-brand fw-bold">Besthockey</span> &copy; @DateTime.Now.Year. Kris. All rights reserved.
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <ul class="social-links justify-content-md-end mb-0">
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
