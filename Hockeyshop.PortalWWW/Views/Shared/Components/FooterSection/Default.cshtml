@model Hockeyshop.Data.Data.CMS.FooterSection

@if (Model != null)
{
    <footer class="page-footer py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span class="footer-brand fw-bold">@Model.FooterLogoText</span>
                    @Html.Raw(Model.FooterText)
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <ul class="social-links justify-content-md-end mb-0">
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
}
