@model Hockeyshop.Data.Data.Products.Product

@{
    ViewData["Title"] = "Product details";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
    var firstImage = Model.ProductImages?.FirstOrDefault();
    var categoryId = ViewBag.CategoryId as int?;
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg">
                @if (firstImage != null && !string.IsNullOrEmpty(firstImage.ImageUrl))
                {
                    <img src="@Url.Content("~/content/" + firstImage.ImageUrl)" class="card-img-top" alt="@Model.Name" style="object-fit:contain; height:320px;" />
                }
                else
                {
                    <img src="@Url.Content("~/content/Placeholder.webp")" class="card-img-top" alt="No image" style="object-fit:contain; height:320px;" />
                }
                <div class="card-body">
                    <h2 class="card-title mb-3">@Model.Name</h2>

                    <div class="mb-3 text-muted small">
                        <strong>Category:</strong> @Model.ProductCategory?.Name<br />
                        <strong>Supplier:</strong> @Model.Supplier?.City
                    </div>
                    <h4 class="text-success mb-3">@Model.Price.ToString("C")</h4>
                    <p class="card-text fs-5">
                        @Model.Description
                    </p>
                    @if (categoryId.HasValue)
                    {
                        <a asp-controller="Shop" asp-action="ProductCategory" asp-route-id="@categoryId" class="btn btn-outline-primary mt-3">
                            <i class="fa-solid fa-arrow-left"></i> Back to @Model.ProductCategory?.Name
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary mt-3">
                            <i class="fa-solid fa-arrow-left"></i> Back to products
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
